{
  "name": "api",
  "version": "0.0.1",
  "description": "Serverless webpack example using Typescript",
  "main": "handler.js",
  "scripts": {
    "offline": "sls offline start &",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "npm run test:unit & npm run test:integration",
    "test:system": "npm-run-all test:unit -p -r offline test:int",
    "test:unit": "NODE_ENV=test ./node_modules/.bin/jest --testPathPattern=tests/unit --ci --verbose",
    "test:int": "npm run offline && sleep 20 && NODE_ENV=test ./node_modules/.bin/jest --testPathPattern=tests/integration --ci --verbose",
    "test:cov": "NODE_ENV=test ./node_modules/.bin/jest --coverage --coverageDirectory=output/coverage/jest"
  },
  "dependencies": {
    "source-map-support": "^0.5.10"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-typescript": "^7.9.0",
    "@types/aws-lambda": "^8.10.17",
    "@types/jest": "^25.2.1",
    "@types/node": "^10.12.18",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "aws-lambda-mock-context": "^3.2.1",
    "babel-jest": "^25.4.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-module-resolver": "^0.16.0",
    "fork-ts-checker-webpack-plugin": "^3.0.1",
    "jest": "^25.4.0",
    "npm-run-all": "^4.1.5",
    "serverless-offline": "^6.1.4",
    "serverless-webpack": "^5.2.0",
    "supertest": "^4.0.2",
    "ts-loader": "^5.3.3",
    "typescript": "^3.2.4",
    "typescript-eslint": "0.0.1-alpha.0",
    "wait-on": "^4.0.2",
    "webpack": "^4.29.0",
    "webpack-node-externals": "^1.7.2"
  },
  "author": "The serverless webpack authors (https://github.com/elastic-coders/serverless-webpack)",
  "license": "MIT"
}
